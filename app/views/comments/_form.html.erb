<%= simple_form_for([@episode, @episode.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, 'Leave a reply', class: "button is-primary" %>
<% end %>