<%= simple_form_for(@episode) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :storyline %>
    <%= f.input :image, as: :file%>
    <%= f.input :runtime %>
    <%= f.input :release_at %>
  </div>
  <div class="row">
    <div class="form-group col-lg-6">
      <%= f.association :season, label: 'Saison', class: 'form-control' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
