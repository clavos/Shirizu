<%= stylesheet_link_tag    'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= form_with(model: @series, local: true) do |form| %>
  <div class="row">
    <div class="form-group col-lg-6">
      <%= form.label :title, 'Title' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group col-lg-6">
      <%= form.label :synopsis, 'Synopsis' %>
      <%= form.text_field :synopsis, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-lg-6">
      <%= form.label :nationality, 'Nationalité' %>
      <%= form.text_field :nationality, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Enregistrer', class: 'btn btn-primary' %>
    <%= link_to 'Retour à la liste des séries', series_index_path, class: 'btn btn-default' %>
  </div>
<%end%>