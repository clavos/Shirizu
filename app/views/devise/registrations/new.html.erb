  <div class="container">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <h2><%= t(".sign_up") %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

        <div class="panel-body">
            <div class="form-group">
              <div class="form-inputs ">
                <%= f.input :username, required: true, autofocus: true, :input_html => { :class => 'form-control' } %>
                <%= f.input :email, required: true, :input_html => { :class => 'form-control' }%>
                <%= f.input :password, required: true, hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length), :input_html => { :class => 'form-control'} %>
                <%= f.input :password_confirmation, required: true, :input_html => { :class => 'form-control' }%>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t(".sign_up"), class:'btn btn-success' %>
              </div>
            </div>
        </div>
      
  
      <% end %>

  </div>
    </div>
  </div>

<%= render "devise/shared/links" %>
